            <field name="name">wizard.reserved.places.form</field>
            <field name="model">openacademy.wizard_reserve</field>
            <field name="arch" type="xml">
                <form string="Add Reserved Attendees">
                    ¿Desea reservar plaza en la sesión?
                    <footer>
                        <button name="reserve_place" type="object" string="SI" class="oe_highlight"/>
